def fact(x):
    '''this is a recursive function to find the factorial of an integer'''

    if x==0 or x==1:
        return 1
    else:
        return x*fact(x-1)
    
print(fact.__doc__)
print("the factorial of 0:", fact(0))
print("the factorial of 1:",fact(1))
print("the factorial of 2:", fact(2))
print("the factorial of 3:",fact(3))
print("the factorial of 4:", fact(4))
print("the factorial of 5:", fact(5))